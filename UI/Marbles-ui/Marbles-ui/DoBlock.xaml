<UserControl
    x:Class="Marbles.DoBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="using:Marbles"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid Background="#FFB900" Padding="10" Width="Auto" Margin="0,5">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Column="0" 
						 Foreground="White" 
						 FontSize="20" 
						 Margin="0,10,10,10"
						 IsTextSelectionEnabled="False"
						 FontWeight="Light"
						 FontFamily="Segoe UI Light"
						 VerticalAlignment="Center"
						 HorizontalAlignment="Left">
                       do
				</TextBlock>
				<local:Values Grid.Column="1" x:Name="ValuesInput"></local:Values>
                <local:DeleteBlockButton Grid.Column="2" HorizontalAlignment="Right"/>
			</Grid>
		</Grid>
</UserControl>
