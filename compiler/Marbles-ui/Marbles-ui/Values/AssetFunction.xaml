<UserControl
    x:Class="Marbles.AssetFunction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marbles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="18"
    d:DesignWidth="180">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="0.1*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="0.1*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="0.1*"/>
		</Grid.ColumnDefinitions>
		<TextBox
			Grid.Column="0"
            x:Name="AssetID"
			FontFamily="Segoe UI Light"
			FontWeight="Light"
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Center"
			VerticalAlignment="Center"
			InputScope="Text"
			TextAlignment="Center"
			Width="Auto">
		</TextBox>
		<TextBlock
			Grid.Column="1"
			FontFamily="Segoe UI Light"
			FontWeight="Light"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			TextAlignment="Center"
			Width="Auto"
			Foreground="White"
			FontSize="20">
			.
		</TextBlock>
		<ComboBox
			Grid.Column="2"
            x:Name="AssetAction"
			FontFamily="Segoe UI Light"
			FontWeight="Light"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Center"
			Width="Auto"
			SelectedIndex="0"
			SelectionChanged="MethodChosenChanged">
			<ComboBoxItem>spin</ComboBoxItem>
			<ComboBoxItem>move_x</ComboBoxItem>
			<ComboBoxItem>move_y</ComboBoxItem>
			<ComboBoxItem>rotate</ComboBoxItem>
			<ComboBoxItem>set_position</ComboBoxItem>
		</ComboBox>
		<TextBlock
			Grid.Column="3"
			FontFamily="Segoe UI Light"
			FontWeight="Light"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			TextAlignment="Center"
			Width="Auto"
			Foreground="White"
			FontSize="20">
			(
		</TextBlock>
		<ListView x:Name="Parameters"
				Grid.Column="4"
				ScrollViewer.VerticalScrollBarVisibility="Disabled" 
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.HorizontalScrollMode="Enabled"                  
				ScrollViewer.VerticalScrollMode="Disabled"
				ItemsSource="{Binding Collection}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
		<TextBlock
			Grid.Column="5"
			FontFamily="Segoe UI Light"
			FontWeight="Light"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			TextAlignment="Center"
			Width="Auto"
			Foreground="White"
			FontSize="20">
			)
		</TextBlock>
	</Grid>
</UserControl>
